<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Expiryreminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_cadet_2</item>
        <item name="colorPrimaryVariant">@color/space_cadet_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rhythm</item>
        <item name="colorSecondaryVariant">@color/rhythm</item>
        <item name="colorOnSecondary">@color/space_cadet_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="appBarLayoutStyle">@style/Theme.Expiryreminder.AppBarOverlay</item>
    </style>

    <style name="Theme.SpaceCadet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryVariant">@color/space_cadet_2</item>
        <item name="colorOnPrimary">@color/alice_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_chocolate</item>
        <item name="colorSecondaryVariant">@color/black_chocolate</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.UnitedNationsBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/united_nation_blue</item>
        <item name="colorPrimaryVariant">@color/united_nation_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/royal_purple</item>
        <item name="colorSecondaryVariant">@color/sea_green</item>
        <item name="colorOnSecondary">@color/black_chocolate</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_chocolate</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/Theme.UnitedNationsBlue.DarkActionBar</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/united_nation_blue</item>
    </style>
    <style name="Theme.RedLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Expiryreminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Expiryreminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RedLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.RedLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@color/red</item>
        <item name="android:colorPrimary">@color/red</item>
    </style>

    <style name="Theme.Expiryreminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>