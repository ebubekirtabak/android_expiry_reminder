<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Expiryreminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_cadet_2</item>
        <item name="colorPrimaryVariant">@color/space_cadet_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rhythm</item>
        <item name="colorSecondaryVariant">@color/rhythm</item>
        <item name="colorOnSecondary">@color/space_cadet_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="appBarLayoutStyle">@style/Theme.Expiryreminder.AppBarOverlay</item>
    </style>

    <style name="Theme.Expiryreminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Expiryreminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Expiryreminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>